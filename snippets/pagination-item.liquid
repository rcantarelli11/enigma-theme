{% liquid
  comment
    Renders a pagination item.

    Required parameters:
      - item_type: { String } The pagination item type. Can be:
        - 'arrow'
        - 'active'
        - 'ellipsis'
        - 'previous-page'
        - 'next-page'
        - 'none'
      - is_link: { Boolean } Whether the pagination item is a link.
      - link: { String } The pagination item's URL.
      - button_label: { String } The pagination item's button label.

    Optional parameters:
      - button_type: { String } The pagination item's button type (used for 'arrow' items). Can be:
        - 'previous'
        - 'next'
      - button_text: { String } The pagination item's button text (used for 'part' items).
      - link_anchor: { String } Used to set a link anchor on the link to scroll the page
  endcomment

  assign button_type = button_type | default: 'none'
-%}

<li class="pagination__item pagination__item--type-{{ item_type }}">
  {% if is_link -%}
    <a
      href="{{ link }}{% if link_anchor %}{{ link_anchor }}{% endif %}"
      class="
        pagination-item__navigation-button
        pagination-item__navigation-button--type-{{ button_type }}
        fs-body-100
      "
      aria-label="{{ button_label }}"
    >
      {%- liquid
        if item_type == 'arrow'
          if button_type == 'previous'
            assign direction = 'left'
          else
            assign direction = 'right'
          endif

          render 'hover-arrow', direction: direction, scale_arrow_with_text: false
        else
          echo button_text
        endif
      -%}
    </a>
  {%- else -%}
    <span
      class="pagination-item__navigation-button"
    >
      {%- liquid
        if button_text != blank
          echo button_text
        endif
      -%}
    </span>
  {%- endif %}
</li>
