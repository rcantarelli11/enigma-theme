{%- liquid
  echo 'section-grid.css' | asset_url | stylesheet_tag
  render 'inline-scripts', script_name: 'visibility-watcher'
  render 'inline-scripts', script_name: 'background-video'

  if section.settings.enable_scrolling_text
    echo 'component-scrolling-content.css' | asset_url | stylesheet_tag
    render 'inline-scripts', script_name: 'scrolling-content'
  endif
-%}

<grid-section
  class="section grid-section"
  style="
    {% render 'settings-section-padding' %}
    {% render 'color-scheme-to-vars', color_scheme: section.settings.color_scheme %}
  "
>
  <div class="section-inner section-inner--width-{{ section.settings.width }}">
    {%- liquid
      capture heading_size_class
        render 'settings-text-size', type: 'heading', size: section.settings.heading_font_size
      endcapture

      render 'section-header', section: section, animate_heading: true, size_class: heading_size_class, center_align: true
    -%}

    <div
      class="
        grid-section__grid
        grid-section__grid--mobile-spacing-{{ section.settings.mobile_spacing}}
        grid-section__grid--desktop-spacing-{{ section.settings.desktop_spacing}}
        {%- if section.settings.enable_scrolling_text %} grid-section__grid--scrolling-text-enabled{%- endif -%}
      "
      style="
        --mobile-grid-spacing: {{ section.settings.mobile_spacing }}px;
        --grid-spacing: {{ section.settings.desktop_spacing }}px;
      "
    >
      {%- for block in section.blocks -%}
        {%- render 'grid-section-item',
          block: block,
          loop_index: forloop.index,
          scrolling_text_enabled: section.settings.enable_scrolling_text,
          scrolling_text_duration: section.settings.scroll_duration,
          scrolling_text_direction: section.settings.scroll_direction,
          scrolling_text_divider: section.settings.text_divider,
          scrolling_text_divider_icon: section.settings.icon,
          section_width: section.settings.width
        -%}
      {%- endfor -%}
    </div>
  </div>
</grid-section>

