{% liquid
  echo 'section-collection-list.css' | asset_url | stylesheet_tag
  echo 'component-collection-item.css' | asset_url | stylesheet_tag
  render 'inline-scripts', script_name: 'visibility-watcher'

  assign column_count_mobile = section.settings.column_count_mobile
  assign column_count_desktop = section.settings.column_count_desktop
  assign gap_count_desktop = column_count_desktop | minus: 1

  assign placeholder_items = column_count_desktop | times: 2
  assign item_count = section.settings.selected_collections.size | default: placeholder_items

  # Note: this is a simplified calculation that under-estimates gaps to always be --spacing-200 for the sake of simplicity
  # TODO roll into get-image sizes
  capture image_sizes_mobile
    if column_count_mobile == 2
      echo 'calc((100vw - (2 * 20px)) - (2 * 16px)) / 2)'
    else
      echo 'calc(100vw - (2 * 20px))'
    endif
  endcapture

  capture image_sizes
    echo '(min-width: 720px) calc(([[width]] - (2 * 20px) - ([[gcd]] * 16px)) / [[ccd]]),'
    echo '(min-width: 1024px) calc(([[width]] - (2 * 32px) - ([[gcd]] * 16px)) / [[ccd]]),'
    echo '(min-width: 1440px) calc(([[width]] - (2 * 40px) - ([[gcd]] * 16px)) / [[ccd]]),'
    echo image_sizes_mobile
  endcapture

  if section.settings.width == 'page-width'
    assign image_sizes = image_sizes | replace: '[[width]]', 'min(100vw, 1600px)'
  else
    # "full-width-padded"
    assign image_sizes = image_sizes | replace: '[[width]]', '100vw'
  endif

  assign image_sizes = image_sizes | replace: '[[ccd]]', column_count_desktop
  assign image_sizes = image_sizes | replace: '[[gcd]]', gap_count_desktop

  capture standard_grid_classes
    echo 'standard-grid standard-grid--with-count-based-gaps '
    echo 'standard-grid--with-matching-row-gaps '
    echo 'standard-grid--mobile-[[ccm]]-column ' | replace: '[[ccm]]', column_count_mobile
    echo 'standard-grid--desktop-[[ccd]]-column ' | replace: '[[ccd]]', column_count_desktop
  endcapture

  capture item_css_vars
    render 'color-scheme-to-vars', color_scheme: section.settings.collection_item_color_scheme
  endcapture
%}
