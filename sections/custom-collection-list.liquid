{%- capture items -%}
  {%- for collection in section.settings.selected_collections -%}
    {%- render 'collection-item',
      coll: collection,
      image_source: section.settings.image_source,
      image_aspect_ratio: section.settings.image_aspect_ratio,
      image_sizes: image_sizes,
      index: forloop.index,
    -%}
  {%- else -%}
    {%- for block in section.blocks -%}
      {%- render 'custom-collection-item',
        block: block,
        image_aspect_ratio: section.settings.image_aspect_ratio,
        image_sizes: image_sizes,
        index: forloop.index,
      -%}
    {%- endfor -%}
  {%- endfor -%}
{%- endcapture -%}

<div
  class="section collection-list"
  style="
    --column-count-mobile: {{ column_count_mobile }};
    --column-count-desktop: {{ column_count_desktop }};
    --overlay-opacity: {{ section.settings.overlay_opacity }}%;
    {% render 'settings-section-padding' %}
    {% render 'color-scheme-to-vars', color_scheme: section.settings.color_scheme %}
  "
>
  <div
    class="section-inner section-inner--width-{{ section.settings.width }}"
  >
    {% render 'section-header', section: section, animate_heading: true, include_animation_assets: false %}

    {%- if section.settings.layout == 'slider' -%}
      {%- liquid
        assign gap = '16px'
        assign gap_above_720 = '32px'
        assign gap_above_1024 = '32px'
        assign gap_above_1440 = '40px'
      -%}

      {%- if section.settings.show_slider_indicator -%}
        {% render 'inline-scripts', script_name: 'scroll-slider-with-scroll-indicator' %}
      {%- endif -%}

      <visibility-watcher class="collection-list__slider">
        <div class="section-slider-wrap-outer scroll-slider-wrap-outer">
          <div class="section-slider-wrap scroll-slider-wrap">
            {%- capture slider -%}
              {% render 'scroll-slider',
                id: 'multi-column',
                slider_items: items,
                columns: column_count_mobile,
                columns_above_720: column_count_desktop,
                gap: gap,
                gap_above_720: gap_above_720,
                gap_above_1024: gap_above_1024,
                gap_above_1440: gap_above_1440,
                peek: '4%',
                slider_wrapper_classes: 'list-collections__grid standard-grid standard-grid--with-count-based-gaps',
                style: item_css_vars,
                navigation_container: ".scroll-slider-wrap-outer"
                animate: true
              %}
            {%- endcapture -%}

            {%- if section.settings.show_slider_indicator -%}
              <scroll-slider-with-scroll-indicator>
                {{ slider }}
                {% render 'scroll-indicator', item_count: item_count %}
              </scroll-slider-with-scroll-indicator>
            {%- else -%}
              {{ slider }}
            {%- endif -%}
          </div>

          {% render 'scroll-slider-navigation-buttons', size: 'large' %}
        </div>
      </visibility-watcher>
    {%- else -%}
      <div
        class="list-collections__grid {{ standard_grid_classes }}"
        style="{{ item_css_vars }}"
      >
        {{ items }}
      </div>
    {%- endif -%}
  </div>
</div>
