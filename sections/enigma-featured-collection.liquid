{%- liquid
  assign collection = section.settings.collection
  assign limit = section.settings.products_to_show
-%}

<section class="enigma-section" id="enigma-fc-{{ section.id }}">
  <div class="enigma-container">
    <div class="enigma-featured-collection__header">
      <div>
        {%- if section.settings.label != blank -%}
          <p class="enigma-label mb-sm">{{ section.settings.label }}</p>
        {%- endif -%}
        <h2 class="enigma-h2">{{ section.settings.title }}</h2>
      </div>
      {%- if collection != blank and section.settings.show_view_all -%}
        <a href="{{ collection.url }}" class="enigma-btn enigma-btn--ghost">
          View All
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      {%- endif -%}
    </div>

    <div class="enigma-featured-collection__grid">
      {%- if collection != blank -%}
        {%- for product in collection.products limit: limit -%}
          {%- render 'enigma-product-card', product: product -%}
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..limit) -%}
          <div class="enigma-product-card">
            <div class="enigma-product-card__media">
              {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder' }}
            </div>
            <div class="enigma-product-card__info">
              <h3 class="enigma-product-card__title">Sample Product {{ i }}</h3>
              <p class="enigma-product-card__price">$29.00</p>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Best Sellers"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all link",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
