<section class="bundle-cta" data-animate="fade-up">
  <div class="container">
    <div class="bundle-cta__card">
      <div class="bundle-cta__glow"></div>

      <div class="bundle-cta__content">
        <span class="bundle-cta__eyebrow">{{ section.settings.eyebrow | default: 'The Complete System' }}</span>
        <h2 class="bundle-cta__title">{{ section.settings.heading | default: 'Get The Full Cycle' }}</h2>
        <p class="bundle-cta__desc">{{ section.settings.description | default: 'All 5 phases. One system. Save 20% when you build your complete performance cycle.' }}</p>

        <div class="bundle-cta__phases">
          <div class="bundle-phase">âš¡ <span>Energy</span></div>
          <svg class="bundle-arrow" width="20" height="12" viewBox="0 0 20 12"><path d="M0 6h18M14 1l5 5-5 5" stroke="rgba(20,184,166,0.4)" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
          <div class="bundle-phase">ðŸ’§ <span>Hydration</span></div>
          <svg class="bundle-arrow" width="20" height="12" viewBox="0 0 20 12"><path d="M0 6h18M14 1l5 5-5 5" stroke="rgba(20,184,166,0.4)" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
          <div class="bundle-phase">ðŸ¥› <span>Protein</span></div>
          <svg class="bundle-arrow" width="20" height="12" viewBox="0 0 20 12"><path d="M0 6h18M14 1l5 5-5 5" stroke="rgba(20,184,166,0.4)" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
          <div class="bundle-phase">ðŸ’ª <span>Creatine</span></div>
          <svg class="bundle-arrow" width="20" height="12" viewBox="0 0 20 12"><path d="M0 6h18M14 1l5 5-5 5" stroke="rgba(20,184,166,0.4)" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
          <div class="bundle-phase">ðŸ§˜ <span>Recovery</span></div>
        </div>

        <div class="bundle-cta__pricing">
          {% if section.settings.compare_price %}
            <span class="bundle-price__compare">{{ section.settings.compare_price }}</span>
          {% endif %}
          {% if section.settings.price %}
            <span class="bundle-price__current">{{ section.settings.price }}</span>
          {% endif %}
          {% if section.settings.savings %}
            <span class="bundle-price__savings">{{ section.settings.savings }}</span>
          {% endif %}
        </div>

        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="btn btn-primary btn-lg bundle-cta__btn">
          {{ section.settings.button_text | default: 'Build Your Cycle' }}
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .bundle-cta {
    padding: 40px 0 100px;
  }

  .bundle-cta__card {
    position: relative;
    padding: 64px 48px;
    border-radius: var(--radius-lg);
    background: linear-gradient(135deg, rgba(20, 184, 166, 0.06) 0%, rgba(20, 184, 166, 0.02) 100%);
    border: 1px solid rgba(20, 184, 166, 0.12);
    text-align: center;
    overflow: hidden;
  }

  .bundle-cta__glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 400px;
    background: radial-gradient(ellipse, rgba(20, 184, 166, 0.1) 0%, transparent 70%);
    pointer-events: none;
  }

  .bundle-cta__content {
    position: relative;
    z-index: 1;
  }

  .bundle-cta__eyebrow {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-accent-bright);
    font-family: var(--font-body);
  }

  .bundle-cta__title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: #fff;
    margin-top: 12px;
    line-height: 1.1;
  }

  .bundle-cta__desc {
    margin-top: 16px;
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    max-width: 520px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
    font-weight: 300;
  }

  .bundle-cta__phases {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 36px;
    flex-wrap: wrap;
  }

  .bundle-phase {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 100px;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .bundle-phase span {
    font-weight: 500;
  }

  .bundle-arrow {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .bundle-arrow { display: none; }
    .bundle-cta__phases { gap: 6px; }
    .bundle-cta__card { padding: 48px 24px; }
  }

  .bundle-cta__pricing {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 12px;
    margin-top: 32px;
  }

  .bundle-price__compare {
    font-size: 1.25rem;
    color: var(--color-text-subtle);
    text-decoration: line-through;
  }

  .bundle-price__current {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    color: #fff;
  }

  .bundle-price__savings {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-success);
    background: rgba(16, 185, 129, 0.1);
    padding: 4px 12px;
    border-radius: 100px;
  }

  .bundle-cta__btn {
    margin-top: 32px;
  }
</style>

{% schema %}
{
  "name": "Bundle CTA",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "The Complete System"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get The Full Cycle"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "All 5 phases. One system. Save 20% when you build your complete performance cycle."
    },
    {
      "type": "text",
      "id": "compare_price",
      "label": "Compare Price",
      "default": "$164.95"
    },
    {
      "type": "text",
      "id": "price",
      "label": "Bundle Price",
      "default": "$129.99"
    },
    {
      "type": "text",
      "id": "savings",
      "label": "Savings Badge",
      "default": "Save 20%"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Build Your Cycle"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Bundle CTA"
    }
  ]
}
{% endschema %}
