{%- style -%}
  #enigma-hero-{{ section.id }} {
    --hero-min-height: {{ section.settings.min_height }}vh;
  }
  #enigma-hero-{{ section.id }} .enigma-hero__overlay {
    background: linear-gradient(
      to bottom,
      rgba(10, 10, 10, {{ section.settings.overlay_opacity_top | divided_by: 100.0 }}) 0%,
      rgba(10, 10, 10, {{ section.settings.overlay_opacity_mid | divided_by: 100.0 }}) 50%,
      rgba(10, 10, 10, {{ section.settings.overlay_opacity_bottom | divided_by: 100.0 }}) 100%
    );
  }
{%- endstyle -%}

<section id="enigma-hero-{{ section.id }}" class="enigma-hero" style="min-height: var(--hero-min-height)">
  <div class="enigma-hero__media">
    {%- if section.settings.video != blank -%}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'enigma-hero__video' }}
    {%- elsif section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'eager', fetchpriority: 'high', sizes: '100vw' }}
    {%- else -%}
      <div style="background: linear-gradient(135deg, #141414 0%, #0A0A0A 100%); width: 100%; height: 100%;"></div>
    {%- endif -%}
  </div>

  <div class="enigma-hero__overlay"></div>

  <div class="enigma-hero__content">
    {%- if section.settings.label != blank -%}
      <p class="enigma-label enigma-hero__label animate-in">{{ section.settings.label }}</p>
    {%- endif -%}

    {%- if section.settings.title != blank -%}
      <h1 class="enigma-h1 enigma-hero__title animate-in">{{ section.settings.title }}</h1>
    {%- endif -%}

    {%- if section.settings.subtitle != blank -%}
      <p class="enigma-hero__subtitle animate-in">{{ section.settings.subtitle }}</p>
    {%- endif -%}

    <div class="enigma-hero__actions animate-in">
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="enigma-btn enigma-btn--primary enigma-btn--lg">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
      {%- if section.settings.button_text_2 != blank -%}
        <a href="{{ section.settings.button_link_2 }}" class="enigma-btn enigma-btn--secondary enigma-btn--lg">
          {{ section.settings.button_text_2 }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Enigma Hero",
  "tag": "section",
  "class": "enigma-section--flush",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "POWER BEYOND LIMITS"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Fuel Your Potential"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Premium supplements crafted to optimize performance, recovery, and wellness."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background video (overrides image)"
    },
    {
      "type": "range",
      "id": "min_height",
      "label": "Minimum height",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 100,
      "unit": "vh"
    },
    {
      "type": "range",
      "id": "overlay_opacity_top",
      "label": "Overlay opacity (top)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "overlay_opacity_mid",
      "label": "Overlay opacity (middle)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "overlay_opacity_bottom",
      "label": "Overlay opacity (bottom)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 95,
      "unit": "%"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Secondary button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Enigma Hero"
    }
  ]
}
{% endschema %}
