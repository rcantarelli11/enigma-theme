<div
  class="register section"
  data-section-id="{{ section.id }}"
  data-section-type="register"
  style="{% render 'settings-section-padding' %}"
>
  <div class="section-inner section-inner--width-narrow">
    <header class="register__header ta-c">
      <h1 class="register__heading ff-heading fs-heading-display-3">
        {{ 'customer.register.title' | t }}
      </h1>
    </header>

    {% assign formId = 'RegisterForm' %}
    {% form 'create_customer', id: formId, novalidate: 'novalidate', class: 'register__form stack' %}
      <div class="register__first-name">
        <label for="{{ formId }}-FirstName">{{ 'customer.register.first_name' | t }}</label>
        <input
          type="text"
          name="customer[first_name]"
          id="{{ formId }}-FirstName"
          class="input"
          {% if form.first_name %}
            value="{{ form.first_name }}"
          {% endif %}
          autocomplete="given-name"
        >
      </div>

      <div class="register__last-name">
        <label for="{{ formId }}-LastName">{{ 'customer.register.last_name' | t }}</label>
        <input
          type="text"
          name="customer[last_name]"
          id="{{ formId }}-LastName"
          class="input"
          {% if form.last_name %}
            value="{{ form.last_name }}"
          {% endif %}
          autocomplete="family-name"
        >
      </div>

      <div class="register__email">
        <label for="{{ formId }}-email">{{ 'customer.register.email' | t }}</label>
        <input
          type="email"
          name="customer[email]"
          id="{{ formId }}-email"
          class="input"
          {% if form.email %}
            value="{{ form.email }}"
          {% endif %}
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          aria-required="true"
        >
      </div>

      <div class="register__password">
        <label for="{{ formId }}-password">{{ 'customer.register.password' | t }}</label>
        <input
          type="password"
          name="customer[password]"
          id="{{ formId }}-password"
          class="input"
          aria-required="true"
        >
      </div>

      {% render 'form-status', form: form, form_id: formId %}

      {% assign submit_label = 'customer.register.submit' | t %}
      {% render 'button',
        label: submit_label,
        class: 'register__button',
        button_width: 'full',
        linkless_type: 'submit',
        require_link: false
      %}
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main_register.name",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:shared.settings.section_settings.header.content"
    },
    {
      "type": "range",
      "id": "top_padding",
      "label": "t:shared.settings.section_settings.top_padding.label",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "t:shared.settings.section_settings.bottom_padding.label",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 50
    }
  ]
}
{% endschema %}
