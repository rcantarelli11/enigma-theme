<div class="a404 section">
  <div class="section-inner section-inner--width-page-width ta-c">
    <h1 class="a404__heading ff-heading fs-heading-2-base">{{ 'general.404.title' | t }}</h1>

    <p class="a404__subheading fs-body-100">{{ 'general.404.subtext' | t }}</p>

    {% assign button_label = 'general.404.link' | t -%}

    {% render 'button',
      label: button_label,
      link: routes.root_url,
      button_alignment: 'center',
      button_style: 'solid',
      class: 'a404__button'
    -%}
  </div>
</div>
